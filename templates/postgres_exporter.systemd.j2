[Unit]
Description=Prometheus exporter for PostgreSQL server metrics
Documentation=https://github.com/prometheus-community/postgres_exporter
After=network.target

[Service]
User={{ postgres_exporter_user }}
EnvironmentFile={{ postgres_exporter_config_file }}
ExecStart={{ prometheus_exporters_dir }}/postgres_exporter $FLAGS

SyslogIdentifier=postgres_exporter
Restart=always

[Install]
WantedBy=multi-user.target
